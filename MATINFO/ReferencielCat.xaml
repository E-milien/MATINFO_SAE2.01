<Window
    x:Class="MATINFO.ReferencielCat"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MATINFO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ReferencielCat"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:GestionAttribution x:Name="gestionAttribution" />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="19" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  En-tête  -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock x:Name="txTitre" Text="Liste des categorie" />

        </StackPanel>

        <!--  Boutons d'actions  -->
        <Button
            Grid.Row="1"
            Height="40"
            Margin="614,24,10,0"
            VerticalAlignment="Top"
            Content="Supprimer" />
        <Button
            Grid.Row="1"
            Height="40"
            Margin="614,69,10,0"
            VerticalAlignment="Top"
            Content="Modifier" />
        <Button
            Grid.Row="1"
            Height="40"
            Margin="614,114,10,0"
            VerticalAlignment="Top"
            Content="Ajouter" />
        <ListView
            Grid.Row="1"
            Margin="10,10,191,10"
            ItemsSource="{Binding LesCategorie}">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Nom}" Header="Nom" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
